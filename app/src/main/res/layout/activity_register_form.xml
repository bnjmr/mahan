<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:orientation="vertical"
        tools:context="ir.aspacrm.my.app.mahanet.ActivityRegisterForm">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_toolbar_height"
                android:background="@color/back_items">

                <LinearLayout
                    android:id="@+id/layBtnClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ripple_light_oval"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="2dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/sv_image_size"
                        android:layout_height="@dimen/sv_image_size"
                        android:layout_margin="5dp"
                        android:src="@drawable/sv_arrows_white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mahan" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:src="@drawable/ic_charge_online" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:text="ثبت نام "
                        android:textColor="@color/text_color_items"
                        android:textSize="@dimen/size_font_very_small"
                        android:textStyle="bold"
                        android:typeface="sans" />


                </LinearLayout>

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:background="@color/back_items">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:background="@color/white">

                            <Spinner
                                android:id="@+id/spnCities"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:layout_weight="1"
                                android:background="@drawable/background_spinner"
                                tools:listitem="@layout/s_item_white" />
                        </FrameLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:background="@color/back_items">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:background="@color/white">

                            <Spinner
                                android:id="@+id/spnRegions"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:background="@drawable/background_spinner"
                                tools:listitem="@layout/s_item_white" />
                        </FrameLayout>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layCheckPhoneNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:background="@color/back_items"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:gravity="center"
                        android:layout_margin="6dp"
                        android:orientation="horizontal">

                        <ir.aspacrm.my.app.mahanet.component.PersianTextViewNormal
                            android:id="@+id/edtPrePhoneNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".3"
                            android:gravity="center"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:minHeight="35dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/light_light_grey"
                            android:textSize="@dimen/size_font_very_very_small" />


                        <ir.aspacrm.my.app.mahanet.component.CustomEditText
                            android:id="@+id/edtRanzheNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/back_items"
                            android:hint="شماره رانژه"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:minHeight="35dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/light_light_grey"
                            android:textSize="@dimen/size_font_very_very_small" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:background="@color/back_items">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <Spinner
                            android:id="@+id/snpService"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/background_spinner"
                            tools:listitem="@layout/s_item_white" />
                    </FrameLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/layInfoForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:layout_margin="3dp"
                        android:orientation="horizontal">



                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:background="@color/back_items"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@color/white"
                                android:gravity="center"
                                android:layout_margin="6dp"
                                android:orientation="horizontal">


                                <ir.aspacrm.my.app.mahanet.component.CustomEditText
                                    android:id="@+id/edtName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@color/back_items"
                                    android:hint="نام "
                                    android:imeOptions="actionNext"
                                    android:minHeight="35dp"
                                    android:paddingLeft="6dp"
                                    android:paddingRight="6dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/light_light_grey"
                                    android:textSize="@dimen/size_font_very_very_small" />


                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:background="@color/back_items"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@color/white"
                                android:gravity="center"
                                android:layout_margin="6dp"
                                android:orientation="horizontal">


                                <ir.aspacrm.my.app.mahanet.component.CustomEditText
                                    android:id="@+id/edtFamilyName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@color/back_items"
                                    android:hint=" نام خانوادگی"
                                    android:imeOptions="actionNext"
                                    android:minHeight="35dp"
                                    android:paddingLeft="6dp"
                                    android:paddingRight="6dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/light_light_grey"
                                    android:textSize="@dimen/size_font_very_very_small" />


                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:background="@color/back_items"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@color/white"
                                android:gravity="center"
                                android:layout_margin="6dp"
                                android:orientation="horizontal">

                                <ir.aspacrm.my.app.mahanet.component.PersianTextViewNormal
                                    android:id="@+id/edtPreTelNumber"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight=".3"
                                    android:gravity="center"
                                    android:imeOptions="actionNext"
                                    android:inputType="phone"
                                    android:minHeight="35dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/light_light_grey"
                                    android:textSize="@dimen/size_font_very_very_small" />


                                <ir.aspacrm.my.app.mahanet.component.CustomEditText
                                    android:id="@+id/edtTelNumber"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@color/back_items"
                                    android:hint="شماره تلفن"
                                    android:imeOptions="actionNext"
                                    android:inputType="phone"
                                    android:minHeight="35dp"
                                    android:paddingLeft="6dp"
                                    android:paddingRight="6dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/light_light_grey"
                                    android:textSize="@dimen/size_font_very_very_small" />


                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:background="@color/back_items"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@color/white"
                                android:gravity="center"
                                android:layout_margin="6dp"
                                android:orientation="horizontal">

                                <ir.aspacrm.my.app.mahanet.component.CustomEditText
                                    android:id="@+id/edtMobileNumber"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@color/back_items"
                                    android:hint="شماره موبایل"
                                    android:imeOptions="actionNext"
                                    android:inputType="phone"
                                    android:minHeight="35dp"
                                    android:paddingLeft="6dp"
                                    android:paddingRight="6dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/light_light_grey"
                                    android:textSize="@dimen/size_font_very_very_small" />


                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>


                    <ir.aspacrm.my.app.mahanet.component.CustomEditText
                        android:id="@+id/edtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:background="@color/back_items"
                        android:hint="آدرس"
                        android:imeOptions="actionGo"
                        android:lines="6"
                        android:minHeight="40dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_light_grey"
                        android:textSize="@dimen/size_font_very_very_small" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/layBtnDone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/button2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:clickable="true"
                        android:foreground="@drawable/ripple_list_item"
                        card_view:cardBackgroundColor="@color/back_btn_login"
                        card_view:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">

                            <TextView
                                android:id="@+id/txtValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:minHeight="36dp"
                                android:minWidth="88dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:singleLine="true"
                                android:text="ثبت نام"
                                android:textColor="@color/white"
                                android:typeface="serif" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layBtnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:background="@drawable/ripple_list_item"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom"
            android:src="@drawable/back_orange" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="6dp"
            android:text="بازگشت"
            android:textColor="@color/txt_blue" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/back_loading_color"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <com.pnikosis.materialishprogress.ProgressWheel
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="5dp"
            app:matProg_barColor="@color/white"
            app:matProg_progressIndeterminate="true" />

        <ir.aspacrm.my.app.mahanet.component.PersianTextViewThin
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="لطفا صبر کنید"
            android:textColor="@color/white"
            android:textSize="@dimen/size_font_very_very_small" />
    </LinearLayout>
</FrameLayout>
