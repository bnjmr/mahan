<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layMainDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_items"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgCloseDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:foreground="@drawable/ripple_list_item"
            android:gravity="center"
            android:minHeight="30dp"
            android:minWidth="70dp"
            android:padding="5dp"
            android:src="@drawable/ic_expand_more_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <net.kianoni.fontloader.TextView
            android:id="@+id/txtDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="نحوه پرداخت"
            android:textColor="@color/black"
            android:textSize="@dimen/size_font_very_small"
            app:fontFile="fonts/sl.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <net.kianoni.fontloader.TextView
            android:id="@+id/txtDialogDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="آیا مایل به پرداخت از طریق اعتبار خود هستید؟"
            android:textColor="@color/black"
            android:textSize="@dimen/size_font_very_very_small"
            android:typeface="serif"
            app:fontFile="fonts/sl.ttf" />
    </LinearLayout>

    <ir.aspacrm.my.app.mahanet.component.PersianTextViewThin
        android:id="@+id/txtShowErrorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:text=""
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/size_font_very_very_small"
        android:typeface="serif" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <include
            android:id="@+id/layBtnCancel"
            layout="@layout/lay_btn_cancel" />

        <include
            android:id="@+id/layBtnOk"
            layout="@layout/lay_btn_ok" />
    </LinearLayout>
</LinearLayout>
