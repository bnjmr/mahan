<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layMainDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:background="#e6e7e8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ir.aspacrm.my.app.mahanet.component.PersianTextViewNormal
                android:id="@+id/txtMessageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:minHeight="30dp"
                android:minWidth="70dp"
                android:padding="5dp"
                android:text="به روز رسانی"
                android:textColor="@color/back_orange_btn2"
                android:textSize="@dimen/size_font_very_small"
                android:typeface="serif" />
        </LinearLayout>


        <WebView
            android:id="@+id/web"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">


        </WebView>

        <ir.aspacrm.my.app.mahanet.component.PersianTextViewNormal
            android:id="@+id/txtVer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ir.aspacrm.my.app.mahanet.component.PersianTextViewNormal
                android:id="@+id/txtClose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/orange"
                android:gravity="center"
                android:padding="4dp"
                android:text="بستن"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ir.aspacrm.my.app.mahanet.component.PersianTextViewNormal
                android:id="@+id/txtUpdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/orange"
                android:gravity="center"
                android:padding="4dp"
                android:text="به روز رسانی"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25">

    </LinearLayout>


</LinearLayout>
